//CrabKing Ai
if stateLock == false
{
    if canSeeTarget 
    { state = MOVE; objective = target; }
    else
    {
        //Player Tile Aggro logic
        var plrTile = instance_nearest(x+((sprite_width+1)*image_xscale),y,PLRTILE);
        
