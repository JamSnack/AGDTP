            <string>///Attack/Target Enemy

//fireRate will be fr_slow during a reload cycle. Alarm triggers when the reload is complete.
if fireRate = fr_slow
{
    fireRate = fr_fast;
    ammo = ammoMax;
}


if instance_exists(ENEMY) &amp;&amp; ammo &gt; 0
{
    fireRate = fr_fast;
    var nearestEnemy = instance_nearest(x,y,ENEMY);
    
    if distance_to_object(nearestEnemy) &lt;= targetRange
    {
        target = nearestEnemy;
        scr_turretBulletCreate(x,y,nearestEnemy,8,irandom_range(3,5),obj_turretBullet,spr_seed_shot);
        var _dir = scr_predictedDirection(x,y,target.x,target.y,target.hspd,target.vsp);
        turretDirection = _dir;
        ammo -= 1;
        
        //Maka sounds
        scr_playSound(snd_turret_shoot,false,7,x,y,1,true);
    }
}
else if ammo &lt; ammoMax
{
    fireRate = fr_slow; //Initializes the reload.
}

alarm[11] = fireRate*room_speed;
</string>
