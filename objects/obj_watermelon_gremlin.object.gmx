var canSeeTarget = !collision_line(x,y,target.x,target.y,OBSTA,false,false);

//Watermelon Gremlin Ai

if stateLock == false
{    
    //Aggro range
    if target != obj_player
    {
        if distance_to_object(obj_player) &lt;= aggroRange &amp;&amp; obj_player.dead == false
        {
            target = obj_player;
        } else { target = obj_pie; }
    } else if obj_player.dead == true then { target = obj_pie; }
}

objective = target;

if instance_exists(objective) 
{ 
    ai_shadowGremlin(state,spr_gremlinIdle,spr_gremlinJump,spr_gremlinWalk,1,objective,-4,atkBox); 
    
    //Seed attack
    if seed_shot_delay &lt;= 0 &amp;&amp; (canSeeTarget || objective.object_index = obj_pie)
    {
        seed_shot_delay = room_speed*(1.6+random_range(0.4,1.2));
        
        var stinger = instance_create(x,y,obj_seed_shot);
        var _dir = point_direction(x,y,objective.x,objective.y);
        stinger.direction = _dir;
        stinger.speed = 6;
        stinger.dam = 4;
        stinger.image_angle = _dir;
        
        scr_playSound(snd_enemy_shoot,false,12,x,y,1,true);
    }
} 
else target = obj_pie;


//----Despawn Check-----------
if position_meeting(x,y,OBSTA) then instance_destroy();
image_xscale = scale;
image_angle += (hAccel+vAccel)*4;

